doctype html
html
    head
        
        link(rel='stylesheet', href='/stylesheets/reset.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css', integrity='sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4', crossorigin='anonymous')
        link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.10/css/all.css', integrity='sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg', crossorigin='anonymous')
        
        title= title
    body

        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='#') Navbar
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                if !currentUser
                else
                    form.form-inline.ml-4(method='GET', action='/users/feed')
                        .input-group
                            input.form-control(type='text', placeholder='Search for a user', name='search', aria-label='Search')
                            .input-group-append
                                button.btn.btn-primary(type='submit', value='search') 
                                    i.fas.fa-search
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                        if !currentUser
                            li.nav-item
                                a.nav-link(href='/') Home 
                            li.nav-item
                                a.nav-link(href='/register') Sign Up
                            li.nav-item
                                a.nav-link(href='/login') Log in
                            li.nav-item
                                a.nav-link(href='/help') Help
                        else
                            li.nav-item
                                a.nav-link(href='/users/feed') Home
                            li.nav-item.active
                                 a.nav-link(href='/users/' + currentUser._id + '/work/new') Submit your work
                            li.nav-item
                                a.nav-link(href='/users/' + currentUser._id) #{currentUser.username}
                            li.nav-item
                                a.nav-link(href='/logout') Logout
                            li.nav-item
                                a.nav-link(href='/help') Help

        .container.mt-5
            form(action = '/users/' + currentUser._id + '/work', method='POST')
                .form-row
                    .form-group.col-md-6
                        label(for='title') Submission Title
                        input.form-control#title(type='text', name='title', placeholder='i.e. Return of the King')
                    .form-group.col-md-4
                        label(for='genre') Choose a genre:
                        select#genre.form-control(name = 'genre')
                            each genre in genres
                                option(value = genre)
                                    = genre
                    .form-group.col-md-2
                        label(for="visibility") Visibility:
                        select#visibility.form-control(name="visibility")
                            option(value = 'public') Public
                            option(value = 'private') Private
                .form-row.mt-2
                    .form-group.col-md-4
                        label(for='workType') What type of work is this?
                        select#formType.form-control(name='workType')
                            each workType in workTypes
                                option(value= workType)
                                    = workType
                    .form-group.col-md-4
                        label(for='length') Length (approx word count)
                        input.form-control#length(type='text', name='length', placeholder='i.e. 5000')
                    .form-group.col-md-4
                        label(for='ageRange') Target audience age range?
                        select#ageRange.form-control(name = 'ageRange')
                            each ageRange in ageRanges
                                option(value = ageRange)
                                    = ageRange
                .form-row.mt-4
                    .form-group.col-md-12
                        label(for="manuscriptText") Text:
                        textarea.form-control#manuscriptText(name="manuscriptText", cols="30", rows="10")
                .form-row.mt-2
                    .form-group.col-md-12
                        button.btn.btn-secondary.mr-3 Save draft
                        button.btn.btn-danger.ml-auto(type='submit') Publish submission



        script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js', integrity='sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js', integrity='sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm', crossorigin='anonymous')